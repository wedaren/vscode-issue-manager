{
  "name": "issue-manager",
  "displayName": "问题管理器",
  "description": "一个用于管理问题的VS Code扩展",
  "version": "0.1.16",
  "publisher": "wedaren",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "issueManager.createIssue",
        "title": "新建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.createIssueFromFocused",
        "title": "新建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.searchIssuesInFocused",
        "title": "搜索问题",
        "icon": "$(search)"
      },
      {
        "command": "issueManager.searchIssuesInOverview",
        "title": "搜索问题",
        "icon": "$(search)"
      },
      {
        "command": "issueManager.createIssueFromOverview",
        "title": "新建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.deleteIssue",
        "icon": "$(trash)",
        "title": "删除"
      },
      {
        "command": "issueManager.disassociateIssue",
        "title": "解除关联"
      },
      {
        "command": "issueManager.createSubIssue",
        "title": "新建子问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.focusIssue",
        "title": "添加关注"
      },
      {
        "command": "issueManager.focusIssueFromIssueFile",
        "title": "添加关注"
      },
      {
        "command": "issueManager.removeFocus",
        "title": "移除关注"
      },
      {
        "command": "issueManager.pinFocus",
        "title": "置顶关注"
      },
      {
        "command": "issueManager.refreshAllViews",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.setRecentIssuesViewMode.group",
        "title": "切换为分组视图",
        "icon": "$(list-flat)"
      },
      {
        "command": "issueManager.setRecentIssuesViewMode.list",
        "title": "切换为列表视图",
        "icon": "$(list-tree)"
      },
      {
        "command": "issueManager.setRecentSort.ctime",
        "title": "按创建时间排序"
      },
      {
        "command": "issueManager.setRecentSort.mtime",
        "title": "按修改时间排序"
      },
      {
        "command": "issueManager.setRecentSort.viewTime",
        "title": "按查看时间排序"
      },
      {
        "command": "issueManager.setRecentSort.viewCount",
        "title": "按查看次数排序"
      },
      {
        "command": "issueManager.copyFilename",
        "title": "复制文件名",
        "icon": "$(file-symlink-file)",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.viewRelatedIssues",
        "title": "查看相关联问题"
      },
      {
        "command": "issueManager.openAndViewRelatedIssues",
        "title": "打开并查看相关联问题"
      },
      {
        "command": "issueManager.openAndRevealIssue",
        "title": "在问题总览中查看"
      },
      {
        "command": "issueManager.pinRelatedView",
        "title": "锁定相关联问题视图",
        "icon": "$(pin)"
      },
      {
        "command": "issueManager.unpinRelatedView",
        "title": "解锁相关联问题视图",
        "icon": "$(pinned)"
      },
      {
        "command": "issueManager.moveTo",
        "title": "移动到..."
      },
      {
        "command": "issueManager.addTo",
        "title": "添加到..."
      },
      {
        "command": "issueManager.openIssueDir",
        "title": "在 VS Code 中打开问题目录",
        "icon": "$(home)"
      },
      {
        "command": "issueManager.openFocusedView",
        "title": "打开关注问题视图",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.synchronizeNow",
        "title": "立即同步",
        "category": "Issue Manager",
        "icon": "$(sync)"
      },
      {
        "command": "issueManager.rss.addFeed",
        "title": "添加RSS订阅源",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.rss.removeFeed",
        "title": "删除订阅源",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.rss.toggleFeed",
        "title": "启用/禁用订阅源",
        "icon": "$(circle-slash)"
      },
      {
        "command": "issueManager.rss.updateFeed",
        "title": "更新订阅源",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.rss.updateAllFeeds",
        "title": "更新所有订阅源",
        "icon": "$(sync)"
      },
      {
        "command": "issueManager.rss.cleanupOldItems",
        "title": "清理旧文章",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.rss.showHistoryStats",
        "title": "查看历史统计",
        "icon": "$(graph)"
      },
      {
        "command": "issueManager.rss.switchToFeedsView",
        "title": "切换到订阅源视图",
        "icon": "$(list-tree)"
      },
      {
        "command": "issueManager.rss.switchToArticlesView",
        "title": "切换到文章视图",
        "icon": "$(list-flat)"
      },
      {
        "command": "issueManager.rss.convertToMarkdown",
        "title": "转换为Markdown"
      },
      {
        "command": "issueManager.rss.previewMarkdown",
        "title": "预览Markdown"
      },
      {
        "command": "issueManager.rss.addToFocused",
        "title": "添加到关注问题"
      },
      {
        "command": "issueManager.rss.configureContentProcessing",
        "title": "配置内容处理",
        "icon": "$(settings-gear)"
      },
      {
        "command": "issueManager.rss.configureFeedSpecificProcessing",
        "title": "配置订阅源内容处理",
        "icon": "$(gear)"
      },
      {
        "command": "issueManager.rss.addToOverview",
        "title": "添加到问题总览"
      },
      {
        "command": "issueManager.rss.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.structure.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      }
    ],
    "submenus": [
      {
        "id": "issueManager.recentSortSubmenu",
        "label": "排序方式",
        "icon": "$(sort-precedence)"
      }
    ],
    "languageModelTools": [
      {
        "name": "issueManager_recordContent",
        "displayName": "新建问题笔记/文档",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "recordContent",
        "icon": "$(notebook)",
        "userDescription": "将聊天内容记录到新的 Markdown 文档中",
        "modelDescription": "当用户要求新建笔记时使用此工具。支持的触发短语包括：'创建文档'、'创建笔记'、'新建问题' 、'新建文档' 等。工具会创建一个新的 Markdown 文件来保存指定的内容。",
        "inputSchema": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string",
              "description": "要保存的完整 Markdown 内容，包括标题、正文和任何必要的格式"
            }
          },
          "required": [
            "content"
          ]
        },
        "when": "issueManager.isDirConfigured"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "issueManager.searchIssuesInOverview",
          "when": "view == issueManager.views.overview",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.openIssueDir",
          "when": "view == issueManager.views.focused",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.searchIssuesInFocused",
          "when": "view == issueManager.views.focused",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.createIssueFromFocused",
          "when": "view == issueManager.views.focused",
          "group": "navigation@3"
        },
        {
          "command": "issueManager.createIssue",
          "when": "view == issueManager.views.recent",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.createIssueFromOverview",
          "when": "view == issueManager.views.overview",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.refreshAllViews",
          "when": "view == issueManager.views.recent || view == issueManager.views.focused",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.setRecentIssuesViewMode.group",
          "when": "view == issueManager.views.recent && issueManager.recentIssuesViewMode == 'list'",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.setRecentIssuesViewMode.list",
          "when": "view == issueManager.views.recent && issueManager.recentIssuesViewMode == 'grouped'",
          "group": "navigation@2"
        },
        {
          "submenu": "issueManager.recentSortSubmenu",
          "when": "view == issueManager.views.recent",
          "group": "navigation@3",
          "title": "排序方式"
        },
        {
          "command": "issueManager.pinRelatedView",
          "when": "view == issueManager.views.related && !issueManager.relatedViewPinned",
          "group": "navigation@99"
        },
        {
          "command": "issueManager.unpinRelatedView",
          "when": "view == issueManager.views.related && issueManager.relatedViewPinned",
          "group": "navigation@99"
        },
        {
          "command": "issueManager.rss.addFeed",
          "when": "view == issueManager.views.rss",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.rss.updateAllFeeds",
          "when": "view == issueManager.views.rss",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.rss.switchToFeedsView",
          "when": "view == issueManager.views.rss && issueManager.rssViewMode == 'articles'",
          "group": "navigation@3"
        },
        {
          "command": "issueManager.rss.switchToArticlesView",
          "when": "view == issueManager.views.rss && issueManager.rssViewMode == 'feeds'",
          "group": "navigation@3"
        },
        {
          "command": "issueManager.rss.refresh",
          "when": "view == issueManager.views.rss",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.rss.cleanupOldItems",
          "when": "view == issueManager.views.rss",
          "group": "navigation@5"
        },
        {
          "command": "issueManager.rss.showHistoryStats",
          "when": "view == issueManager.views.rss",
          "group": "navigation@6"
        },
        {
          "command": "issueManager.structure.refresh",
          "when": "view == issueManager.views.structure",
          "group": "navigation@1"
        }
      ],
      "issueManager.recentSortSubmenu": [
        {
          "command": "issueManager.setRecentSort.ctime",
          "group": "1_sort@1"
        },
        {
          "command": "issueManager.setRecentSort.mtime",
          "group": "1_sort@2"
        },
        {
          "command": "issueManager.setRecentSort.viewTime",
          "group": "1_sort@3"
        },
        {
          "command": "issueManager.setRecentSort.viewCount",
          "group": "1_sort@4"
        }
      ],
      "view/item/context": [
        {
          "command": "issueManager.deleteIssue",
          "when": "view == 'issueManager.views.recent' && viewItem == 'isolatedIssue'",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.deleteIssue",
          "when": "view == 'issueManager.views.recent' && viewItem == 'isolatedIssue'",
          "group": "inline"
        },
        {
          "command": "issueManager.disassociateIssue",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused')  && viewItem == 'issueNode'",
          "group": "modification@2"
        },
        {
          "command": "issueManager.createSubIssue",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused')",
          "group": "inline"
        },
        {
          "command": "issueManager.focusIssue",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused') && viewItem == 'issueNode'",
          "group": "modification@3"
        },
        {
          "command": "issueManager.focusIssueFromIssueFile",
          "when": "(view == 'issueManager.views.recent' && viewItem == 'isolatedIssue')",
          "group": "modification@3"
        },
        {
          "command": "issueManager.removeFocus",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused') && (viewItem == 'focusedNode' || viewItem == 'focusedNodeFirst')",
          "group": "modification@3"
        },
        {
          "command": "issueManager.pinFocus",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused') && viewItem == 'focusedNode'",
          "group": "modification@3"
        },
        {
          "command": "issueManager.copyFilename",
          "when": "viewItem == 'recentIssue' || viewItem == 'issueNode' || viewItem == 'focusedNode' || viewItem == 'focusedNodeFirst' || viewItem == 'isolatedIssue'",
          "group": "inline"
        },
        {
          "command": "issueManager.moveTo",
          "when": "view == 'issueManager.views.overview' || view == 'issueManager.views.focused'",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.addTo",
          "when": "view == 'issueManager.views.recent'",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.rss.removeFeed",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssFeed'",
          "group": "inline"
        },
        {
          "command": "issueManager.rss.toggleFeed",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssFeed'",
          "group": "modification@1"
        },
        {
          "command": "issueManager.rss.updateFeed",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssFeed'",
          "group": "modification@2"
        },
        {
          "command": "issueManager.rss.previewMarkdown",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@1"
        },
        {
          "command": "issueManager.rss.convertToMarkdown",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@2"
        },
        {
          "command": "issueManager.rss.addToFocused",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@3"
        },
        {
          "command": "issueManager.rss.addToOverview",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@4"
        }
      ],
      "editor/context": [
        {
          "command": "issueManager.viewRelatedIssues",
          "when": "resourceLangId == 'markdown' && issueManager.isDirConfigured",
          "group": "navigation@0",
          "title": "查看相关联问题"
        },
        {
          "command": "issueManager.copyFilename",
          "when": "resourceLangId == 'markdown' && issueManager.isDirConfigured",
          "group": "navigation@0",
          "title": "复制文件名"
        }
      ]
    },
    "keybindings": [
      {
        "command": "issueManager.openFocusedView",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "issueManager.isDirConfigured"
      },
      {
        "command": "issueManager.createIssueFromFocused",
        "key": "ctrl+j ctrl+n",
        "mac": "cmd+j cmd+n",
        "when": "issueManager.isDirConfigured"
      },
      {
        "command": "issueManager.searchIssuesInFocused",
        "key": "ctrl+j ctrl+f",
        "mac": "cmd+j cmd+f",
        "when": "issueManager.isDirConfigured"
      },
      {
        "command": "workbench.action.togglePanel",
        "key": "ctrl+j ctrl+j",
        "mac": "cmd+j cmd+j",
        "when": "issueManager.isDirConfigured"
      }
    ],
    "configuration": {
      "title": "问题管理插件",
      "properties": {
        "issueManager.issueDir": {
          "type": "string",
          "default": "",
          "description": "【必须】指定一个绝对路径作为存放所有问题（.md文件）的根目录。"
        },
        "issueManager.recentIssues.defaultMode": {
          "type": "string",
          "default": "grouped",
          "enum": [
            "grouped",
            "list"
          ],
          "description": "设置最近问题视图的默认显示模式，可选值为 'grouped'（分组模式）或 'list'（列表模式）。"
        },
        "issueManager.sync.enableAutosync": {
          "type": "boolean",
          "default": false,
          "description": "启用自动化Git同步功能。启用后，插件将自动监听文件变更并同步到Git仓库。"
        },
        "issueManager.sync.autoCommitMessage": {
          "type": "string",
          "default": "[Auto-Sync] Changes at {date}",
          "description": "自动提交时使用的消息模板。可以包含 {date} 占位符表示当前日期时间。"
        },
        "issueManager.sync.changeDebounceInterval": {
          "type": "number",
          "default": 300,
          "description": "文件变更后触发自动同步前的等待时间（单位：秒）。默认值为 300 秒（5 分钟）。"
        },
        "issueManager.sync.periodicPullInterval": {
          "type": "number",
          "default": 15,
          "description": "后台周期性拉取远程更新的时间间隔（单位：分钟）。设置为0可禁用。"
        },
        "issueManager.rss.enableAutoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "是否启用RSS订阅源的自动更新功能。"
        },
        "issueManager.rss.defaultUpdateInterval": {
          "type": "number",
          "default": 60,
          "description": "RSS订阅源的默认更新间隔（单位：分钟）。"
        },
        "issueManager.rss.maxItemsPerFeed": {
          "type": "number",
          "default": 500,
          "description": "每个RSS订阅源最多保存的文章数量。"
        },
        "issueManager.rss.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "是否启用新文章通知功能。"
        },
        "issueManager.rss.feeds": {
          "type": "array",
          "default": [],
          "description": "RSS订阅源列表。这是一个内部配置项，通常通过界面操作进行管理。",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "订阅源的唯一标识符"
              },
              "name": {
                "type": "string",
                "description": "订阅源名称"
              },
              "url": {
                "type": "string",
                "description": "RSS订阅源的URL"
              },
              "enabled": {
                "type": "boolean",
                "description": "是否启用此订阅源"
              },
              "updateInterval": {
                "type": "number",
                "description": "更新间隔（分钟）"
              }
            }
          }
        },
        "issueManager.rss.contentProcessing.defaultPreset": {
          "type": "string",
          "default": "concise",
          "enum": [
            "concise",
            "summary",
            "clean",
            "plain",
            "custom"
          ],
          "description": "默认的内容处理预设。concise: 简洁模式, summary: 摘要模式, clean: 清洁模式, plain: 纯文本模式, custom: 自定义模式。"
        },
        "issueManager.rss.contentProcessing.maxLength": {
          "type": "number",
          "default": 500,
          "description": "内容最大长度限制（字符数）。"
        },
        "issueManager.rss.contentProcessing.preserveHtml": {
          "type": "boolean",
          "default": false,
          "description": "是否保留HTML标签。"
        },
        "issueManager.rss.contentProcessing.preserveImages": {
          "type": "boolean",
          "default": true,
          "description": "是否保留图片标签。"
        },
        "issueManager.rss.contentProcessing.preserveLinks": {
          "type": "boolean",
          "default": true,
          "description": "是否保留链接标签。"
        },
        "issueManager.rss.contentProcessing.removeTags": {
          "type": "array",
          "default": [
            "script",
            "style",
            "iframe"
          ],
          "description": "要移除的HTML标签列表。",
          "items": {
            "type": "string"
          }
        },
        "issueManager.rss.contentProcessing.summaryMode.enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用摘要模式。"
        },
        "issueManager.rss.contentProcessing.summaryMode.maxSentences": {
          "type": "number",
          "default": 3,
          "description": "摘要模式下最多提取的句子数量。"
        },
        "issueManager.rss.contentProcessing.summaryMode.preferredSections": {
          "type": "array",
          "default": [
            "摘要",
            "总结",
            "Summary",
            "Abstract"
          ],
          "description": "摘要模式下优先提取的章节标题。",
          "items": {
            "type": "string"
          }
        },
        "issueManager.rss.contentProcessing.customRules": {
          "type": "array",
          "default": [],
          "description": "自定义内容处理规则（正则表达式）。",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "正则表达式模式"
              },
              "replacement": {
                "type": "string",
                "description": "替换文本"
              },
              "flags": {
                "type": "string",
                "description": "正则表达式标志（如: gi, gm等）"
              }
            }
          }
        },
        "issueManager.rss.contentProcessing.feedSpecific": {
          "type": "object",
          "default": {},
          "description": "订阅源特定的内容处理配置。这是一个内部配置项，通常通过界面操作进行管理。"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "issue-manager",
          "title": "问题管理",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "issue-manager": [
        {
          "id": "issueManager.views.focused",
          "name": "关注问题",
          "icon": "resources/icon.svg"
        },
        {
          "id": "issueManager.views.overview",
          "name": "问题总览",
          "icon": "resources/icon.svg"
        },
        {
          "id": "issueManager.views.recent",
          "name": "最近问题",
          "icon": "resources/icon.svg"
        },
        {
          "id": "issueManager.views.related",
          "name": "相关联问题",
          "icon": "resources/icon.svg"
        },
        {
          "id": "issueManager.views.rss",
          "name": "RSS问题",
          "icon": "resources/icon.svg"
        },
        {
          "id": "issueManager.views.structure",
          "name": "问题结构",
