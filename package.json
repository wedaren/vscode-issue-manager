{
  "name": "issue-manager",
  "displayName": "问题管理器",
  "description": "一个用于管理问题的VS Code扩展",
  "version": "3.0.3",
  "publisher": "wedaren",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "issueManager.createIssue",
        "title": "新建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.createIssueFromFocused",
        "title": "新建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.searchIssuesInFocused",
        "title": "搜索问题",
        "icon": "$(search)"
      },
      {
        "command": "issueManager.searchIssuesInOverview",
        "title": "搜索问题",
        "icon": "$(search)"
      },
      {
        "command": "issueManager.createIssueFromOverview",
        "title": "新建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.createIssueFromClipboard",
        "title": "从剪贴板创建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.createIssueFromHtml",
        "title": "从 HTML 创建问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.deleteIssue",
        "icon": "$(trash)",
        "title": "删除"
      },
      {
        "command": "issueManager.disassociateIssue",
        "title": "解除关联"
      },
      {
        "command": "issueManager.createSubIssue",
        "title": "新建子问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.createSubIssueFromEditor",
        "title": "在编辑器中新建子问题",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.focusIssue",
        "title": "添加关注"
      },
      {
        "command": "issueManager.focusIssueFromIssueFile",
        "title": "添加关注"
      },
      {
        "command": "issueManager.addToFocusedViewFromEditor",
        "title": "添加关注"
      },
      {
        "command": "issueManager.removeFocus",
        "title": "移除关注",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.pinFocus",
        "title": "置顶关注"
      },
      {
        "command": "issueManager.refreshAllViews",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.setRecentIssuesViewMode.group",
        "title": "切换为分组视图",
        "icon": "$(list-flat)"
      },
      {
        "command": "issueManager.setRecentIssuesViewMode.list",
        "title": "切换为列表视图",
        "icon": "$(list-tree)"
      },
      {
        "command": "issueManager.setRecentSort.ctime",
        "title": "按创建时间排序"
      },
      {
        "command": "issueManager.setRecentSort.mtime",
        "title": "按修改时间排序"
      },
      {
        "command": "issueManager.setRecentSort.viewTime",
        "title": "按查看时间排序"
      },
      {
        "command": "issueManager.setRecentSort.viewCount",
        "title": "按查看次数排序"
      },
      {
        "command": "issueManager.copyFilename",
        "title": "复制文件名",
        "icon": "$(file-symlink-file)",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.copyIssueId",
        "title": "复制问题 ID",
        "icon": "$(symbol-key)",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.revealInOverviewFromEditor",
        "title": "在问题总览中查看",
        "icon": "$(eye)",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.viewRelatedIssues",
        "title": "查看相关联问题"
      },
      {
        "command": "issueManager.openAndViewRelatedIssues",
        "title": "打开并查看相关联问题"
      },
      {
        "command": "issueManager.openAndRevealIssue",
        "title": "在问题总览中查看"
      },
      {
        "command": "issueManager.pinRelatedView",
        "title": "锁定相关联问题视图",
        "icon": "$(pin)"
      },
      {
        "command": "issueManager.unpinRelatedView",
        "title": "解锁相关联问题视图",
        "icon": "$(pinned)"
      },
      {
        "command": "issueManager.moveTo",
        "title": "移动到..."
      },
      {
        "command": "issueManager.moveToFromEditor",
        "title": "移动到..."
      },
      {
        "command": "issueManager.addIssueToTree",
        "title": "添加到..."
      },
      {
        "command": "issueManager.openIssueDir",
        "title": "在 VS Code 中打开问题目录",
        "icon": "$(home)"
      },
      {
        "command": "issueManager.openFocusedView",
        "title": "打开关注问题视图",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.openRecentView",
        "title": "打开最近问题视图",
        "category": "Issue Manager"
      },
      {
        "command": "issueManager.synchronizeNow",
        "title": "立即同步",
        "category": "Issue Manager",
        "icon": "$(sync)"
      },
      {
        "command": "issueManager.rss.addFeed",
        "title": "添加RSS订阅源",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.rss.removeFeed",
        "title": "删除订阅源",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.rss.toggleFeed",
        "title": "启用/禁用订阅源",
        "icon": "$(circle-slash)"
      },
      {
        "command": "issueManager.rss.updateFeed",
        "title": "更新订阅源",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.rss.updateAllFeeds",
        "title": "更新所有订阅源",
        "icon": "$(sync)"
      },
      {
        "command": "issueManager.rss.cleanupOldItems",
        "title": "清理旧文章",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.rss.showHistoryStats",
        "title": "查看历史统计",
        "icon": "$(graph)"
      },
      {
        "command": "issueManager.rss.switchToFeedsView",
        "title": "切换到订阅源视图",
        "icon": "$(list-tree)"
      },
      {
        "command": "issueManager.rss.switchToArticlesView",
        "title": "切换到文章视图",
        "icon": "$(list-flat)"
      },
      {
        "command": "issueManager.rss.convertToMarkdown",
        "title": "转换为Markdown"
      },
      {
        "command": "issueManager.rss.previewMarkdown",
        "title": "预览Markdown"
      },
      {
        "command": "issueManager.rss.addToFocused",
        "title": "添加到关注问题"
      },
      {
        "command": "issueManager.rss.configureContentProcessing",
        "title": "配置内容处理",
        "icon": "$(settings-gear)"
      },
      {
        "command": "issueManager.rss.configureFeedSpecificProcessing",
        "title": "配置订阅源内容处理",
        "icon": "$(gear)"
      },
      {
        "command": "issueManager.rss.addToOverview",
        "title": "添加到问题总览"
      },
      {
        "command": "issueManager.rss.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.structure.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.logicalTree.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.logicalTree.createRoot",
        "title": "创建根节点",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.logicalTree.addChild",
        "title": "添加子节点",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.logicalTree.removeNode",
        "title": "从层级树移除",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.para.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "issueManager.para.addToProjects",
        "title": "添加到 Projects"
      },
      {
        "command": "issueManager.para.addToAreas",
        "title": "添加到 Areas"
      },
      {
        "command": "issueManager.para.addToResources",
        "title": "添加到 Resources"
      },
      {
        "command": "issueManager.para.addToArchives",
        "title": "添加到 Archives"
      },
      {
        "command": "issueManager.para.viewInProjects",
        "title": "在 Projects 中查看"
      },
      {
        "command": "issueManager.para.viewInAreas",
        "title": "在 Areas 中查看"
      },
      {
        "command": "issueManager.para.viewInResources",
        "title": "在 Resources 中查看"
      },
      {
        "command": "issueManager.para.viewInArchives",
        "title": "在 Archives 中查看"
      },
      {
        "command": "issueManager.para.removeFromCategory",
        "title": "从分类中移除",
        "icon": "$(close)"
      },
      {
        "command": "issueManager.para.addToFocused",
        "title": "添加到关注",
        "icon": "$(star)"
      },
      {
        "command": "issueManager.para.moveToProjects",
        "title": "移动到 Projects"
      },
      {
        "command": "issueManager.para.moveToAreas",
        "title": "移动到 Areas"
      },
      {
        "command": "issueManager.para.moveToResources",
        "title": "移动到 Resources"
      },
      {
        "command": "issueManager.para.moveToArchives",
        "title": "移动到 Archives"
      },
      {
        "command": "issueManager.selectLLMModel",
        "title": "选择 AI 模型",
        "category": "Issue Manager",
        "icon": "$(hubot)"
      },
      {
        "command": "issueManager.copilotDiffSend",
        "title": "Copilot: 发送并展示 Diff",
        "category": "Issue Manager",
        "icon": "$(sync)"
      },
      {
        "command": "issueManager.copilotDiffCopyResult",
        "title": "Copilot: 复制改写结果",
        "category": "Issue Manager",
        "icon": "$(copy)"
      },
      {
        "command": "issueManager.showRelationGraph",
        "title": "显示问题关系图",
        "category": "Issue Manager",
        "icon": "$(graph)"
      },
      {
        "command": "issueManager.showMindMap",
        "title": "显示思维导图",
        "category": "Issue Manager",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "issueManager.addWorkspaceMapping",
        "title": "添加工作区笔记映射",
        "category": "Issue Manager",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.removeWorkspaceMapping",
        "title": "移除工作区笔记映射",
        "category": "Issue Manager",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.addFileMapping",
        "title": "添加文件笔记映射",
        "category": "Issue Manager",
        "icon": "$(add)"
      },
      {
        "command": "issueManager.removeFileMapping",
        "title": "移除文件笔记映射",
        "category": "Issue Manager",
        "icon": "$(trash)"
      },
      {
        "command": "issueManager.editNoteMapping",
        "title": "编辑笔记映射",
        "category": "Issue Manager"
      }
    ],
    "submenus": [
      {
        "id": "issueManager.recentSortSubmenu",
        "label": "排序方式",
        "icon": "$(sort-precedence)"
      }
    ],
    "languageModelTools": [
      {
        "name": "issueManager_recordContent",
        "displayName": "新建问题笔记/文档",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "recordContent",
        "icon": "$(notebook)",
        "userDescription": "将聊天内容记录到新的 Markdown 文档中",
        "modelDescription": "当用户要求新建笔记时使用此工具。支持的触发短语包括：'创建文档'、'创建笔记'、'新建问题' 、'新建文档' 等。工具会创建一个新的 Markdown 文件来保存指定的内容。",
        "inputSchema": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string",
              "description": "要保存的完整 Markdown 内容，包括标题、正文和任何必要的格式"
            }
          },
          "required": [
            "content"
          ]
        },
        "when": "issueManager.isDirConfigured"
      }
    ],
    "chatParticipants": [
      {
        "id": "issueManager.chat",
        "name": "issueManager",
        "fullName": "问题管理器",
        "description": "管理问题、笔记和文档",
        "isSticky": true,
        "commands": [
          {
            "name": "新建",
            "description": "创建新问题"
          },
          {
            "name": "搜索",
            "description": "搜索现有问题"
          },
          {
            "name": "研究",
            "description": "深度研究并生成文档"
          },
          {
            "name": "帮助",
            "description": "显示帮助信息"
          }
        ]
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "issueManager.addWorkspaceMapping",
          "when": "view == issueManager.views.noteMapping",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.searchIssuesInOverview",
          "when": "view == issueManager.views.overview",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.openIssueDir",
          "when": "view == issueManager.views.focused",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.searchIssuesInFocused",
          "when": "view == issueManager.views.focused",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.createIssueFromFocused",
          "when": "view == issueManager.views.focused",
          "group": "navigation@3"
        },
        {
          "command": "issueManager.createIssue",
          "when": "view == issueManager.views.recent",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.createIssueFromOverview",
          "when": "view == issueManager.views.overview",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.setRecentIssuesViewMode.group",
          "when": "view == issueManager.views.recent && issueManager.recentIssuesViewMode == 'list'",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.setRecentIssuesViewMode.list",
          "when": "view == issueManager.views.recent && issueManager.recentIssuesViewMode == 'grouped'",
          "group": "navigation@2"
        },
        {
          "submenu": "issueManager.recentSortSubmenu",
          "when": "view == issueManager.views.recent",
          "group": "navigation@3",
          "title": "排序方式"
        },
        {
          "command": "issueManager.pinRelatedView",
          "when": "view == issueManager.views.related && !issueManager.relatedViewPinned",
          "group": "navigation@99"
        },
        {
          "command": "issueManager.unpinRelatedView",
          "when": "view == issueManager.views.related && issueManager.relatedViewPinned",
          "group": "navigation@99"
        },
        {
          "command": "issueManager.rss.addFeed",
          "when": "view == issueManager.views.rss",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.rss.updateAllFeeds",
          "when": "view == issueManager.views.rss",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.rss.switchToFeedsView",
          "when": "view == issueManager.views.rss && issueManager.rssViewMode == 'articles'",
          "group": "navigation@3"
        },
        {
          "command": "issueManager.rss.switchToArticlesView",
          "when": "view == issueManager.views.rss && issueManager.rssViewMode == 'feeds'",
          "group": "navigation@3"
        },
        {
          "command": "issueManager.rss.refresh",
          "when": "view == issueManager.views.rss",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.rss.cleanupOldItems",
          "when": "view == issueManager.views.rss",
          "group": "navigation@5"
        },
        {
          "command": "issueManager.rss.showHistoryStats",
          "when": "view == issueManager.views.rss",
          "group": "navigation@6"
        },
        {
          "command": "issueManager.structure.refresh",
          "when": "view == issueManager.views.structure",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.logicalTree.refresh",
          "when": "view == issueManager.views.logicalTree",
          "group": "navigation@1"
        },
        {
          "command": "issueManager.logicalTree.addChild",
          "when": "view == issueManager.views.logicalTree",
          "group": "navigation@2"
        },
        {
          "command": "issueManager.para.refresh",
          "when": "view == issueManager.views.para",
          "group": "navigation@1"
        }
      ],
      "issueManager.recentSortSubmenu": [
        {
          "command": "issueManager.setRecentSort.ctime",
          "group": "1_sort@1"
        },
        {
          "command": "issueManager.setRecentSort.mtime",
          "group": "1_sort@2"
        },
        {
          "command": "issueManager.setRecentSort.viewTime",
          "group": "1_sort@3"
        },
        {
          "command": "issueManager.setRecentSort.viewCount",
          "group": "1_sort@4"
        }
      ],
      "view/item/context": [
        {
          "command": "issueManager.addWorkspaceMapping",
          "when": "view == issueManager.views.noteMapping && viewItem == workspaceMapping",
          "group": "inline@1"
        },
        {
          "command": "issueManager.removeWorkspaceMapping",
          "when": "view == issueManager.views.noteMapping && viewItem == workspaceIssue",
          "group": "inline@1"
        },
        {
          "command": "issueManager.addFileMapping",
          "when": "view == issueManager.views.noteMapping && viewItem == fileMapping",
          "group": "inline@1"
        },
        {
          "command": "issueManager.removeFileMapping",
          "when": "view == issueManager.views.noteMapping && viewItem == fileIssue",
          "group": "inline@1"
        },
        {
          "command": "issueManager.deleteIssue",
          "when": "view == 'issueManager.views.recent' && viewItem =~ /isolatedIssue/",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.deleteIssue",
          "when": "view == 'issueManager.views.recent' && viewItem =~ /isolatedIssue/",
          "group": "inline"
        },
        {
          "command": "issueManager.addIssueToTree",
          "when": "view == 'issueManager.views.recent' && viewItem =~ /isolatedIssue/",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.focusIssueFromIssueFile",
          "when": "(view == 'issueManager.views.recent' && viewItem =~ /isolatedIssue/)",
          "group": "modification@3"
        },
        {
          "command": "issueManager.disassociateIssue",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused' || view == 'issueManager.views.related')  && viewItem =~ /issueNode/",
          "group": "modification@2"
        },
        {
          "command": "issueManager.createSubIssue",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused' || view == 'issueManager.views.related')",
          "group": "inline"
        },
        {
          "command": "issueManager.focusIssue",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused' || view == 'issueManager.views.related') && viewItem =~ /issueNode/",
          "group": "modification@3"
        },
        {
          "command": "issueManager.removeFocus",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused' || view == 'issueManager.views.related') && (viewItem =~ /focusedNode/ || viewItem =~ /focusedNodeFirst/)",
          "group": "modification@3"
        },
        {
          "command": "issueManager.pinFocus",
          "when": "(view == 'issueManager.views.overview' || view == 'issueManager.views.focused' || view == 'issueManager.views.related') && viewItem =~ /focusedNode/",
          "group": "modification@3"
        },
        {
          "command": "issueManager.copyFilename",
          "when": "viewItem =~ /(recentIssue|issueNode|isolatedIssue)/",
          "group": "inline"
        },
        {
          "command": "issueManager.removeFocus",
          "when": "viewItem =~ /(focusedNode|focusedNodeFirst)/",
          "group": "inline"
        },
        {
          "command": "issueManager.moveTo",
          "when": "view == 'issueManager.views.overview' || view == 'issueManager.views.focused' || view == 'issueManager.views.related'",
          "group": "navigation@4"
        },
        {
          "command": "issueManager.rss.removeFeed",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssFeed'",
          "group": "inline"
        },
        {
          "command": "issueManager.rss.toggleFeed",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssFeed'",
          "group": "modification@1"
        },
        {
          "command": "issueManager.rss.updateFeed",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssFeed'",
          "group": "modification@2"
        },
        {
          "command": "issueManager.rss.previewMarkdown",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@1"
        },
        {
          "command": "issueManager.rss.convertToMarkdown",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@2"
        },
        {
          "command": "issueManager.rss.addToFocused",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@3"
        },
        {
          "command": "issueManager.rss.addToOverview",
          "when": "view == 'issueManager.views.rss' && viewItem == 'rssItem'",
          "group": "modification@4"
        },
        {
          "command": "issueManager.para.addToProjects",
          "when": "issueManager.isInIssueTreeView && (viewItem =~ /paraAssignable/ || viewItem =~ /paraAssigned:(?!projects)/)",
          "group": "para@1"
        },
        {
          "command": "issueManager.para.addToAreas",
          "when": "issueManager.isInIssueTreeView && (viewItem =~ /paraAssignable/ || viewItem =~ /paraAssigned:(?!areas)/)",
          "group": "para@2"
        },
        {
          "command": "issueManager.para.addToResources",
          "when": "issueManager.isInIssueTreeView && (viewItem =~ /paraAssignable/ || viewItem =~ /paraAssigned:(?!resources)/)",
          "group": "para@3"
        },
        {
          "command": "issueManager.para.addToArchives",
          "when": "issueManager.isInIssueTreeView && (viewItem =~ /paraAssignable/ || viewItem =~ /paraAssigned:(?!archives)/)",
          "group": "para@4"
        },
        {
          "command": "issueManager.para.viewInProjects",
          "when": "issueManager.isInIssueTreeView && viewItem =~ /paraAssigned:projects/",
          "group": "para@0"
        },
        {
          "command": "issueManager.para.viewInAreas",
          "when": "issueManager.isInIssueTreeView && viewItem =~ /paraAssigned:areas/",
          "group": "para@1"
